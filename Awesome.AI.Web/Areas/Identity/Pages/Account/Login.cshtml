@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["HeaderFull"] = " hidden ";
}

<div class="text-neutral-200">

    <div class="i-filler-100"></div>

    <h1 class="text-2xl">@ViewData["Title"]</h1>

    <div class="">
        <section>
            <form id="account" method="post">
                <h2 class="text-lg">Admin login only.</h2>
                <div class="i-filler-20"></div>
                <div asp-validation-summary="ModelOnly" class="" role="alert"></div>
                <div class="">
                    <input asp-for="Input.Email" class="bg-neutral-600" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="">Email</label>
                    <span asp-validation-for="Input.Email" class=""></span>
                </div>
                <div class="i-filler-20"></div>
                <div class="">
                    <input asp-for="Input.Password" class="bg-neutral-600" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="">Password</label>
                    <span asp-validation-for="Input.Password" class=""></span>
                </div>
                <div class="checkbox ">
                    <label asp-for="Input.RememberMe" class="">
                        <input class="" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <div class="i-filler-200"></div>
    <div class="i-filler-200"></div>
    <div class="i-filler-200"></div>
    <div class="i-filler-200"></div>
    <div class="i-filler-200"></div>
    <div class="i-filler-200"></div>

